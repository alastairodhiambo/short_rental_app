<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link rel="stylesheet" href="css/registration.min.css" type="text/css" />
</head>

<body>
    <section class="content">
        <div class="formbox">
            <h2>Sign In</h2>
            <form action="/sign_in_check" method="POST">
                {{#if data}}{{#each data}}
                <p class="error">{{username}}</p>
                <div>
                    <i class="far fa-user"></i>
                    <input id="username" type="text" name="username" placeholder="Username or Email" value="{{u_value}}"
                        tabindex="1" /><br />
                </div>
                <p class="error">{{password}}</p>
                {{/each}}{{else}}
                <div>
                    <i class="far fa-user"></i>
                    <input id="username" type="text" name="username" placeholder="Username or Email" value="{{u_value}}"
                        tabindex="1" /><br />
                </div>
                {{/if}}
                <div>
                    <i class="fas fa-key"></i>
                    <input id="password" type="password" name="password" placeholder="Password" tabindex="2" /><br />
                </div>
                <div class="submit-wrapper">
                    <input type="submit" value="Sign In" tabindex="3" />
                </div>
            </form>
        </div>
    </section>
</body>

</html>